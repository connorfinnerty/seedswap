
<div class="col-md-6 col-md-offset-3 outer-box">
<h2><%= @post.name %></h2>
<p><%= @post.description %></p>
<p>Quantity: <%=  @post.quantity %></p>
<p>Seed tested: <%= @post.tested %></p>
<p>Harvested: <%= @post.seed_harvested %></p>
<p><%= link_to @post.user.name, user_path(@post.user)  %></p>
<%= request_button(post_id: @post.id) %>

<% @post.comments.each do |comment| %>
  <div>
  <h5><%= comment.user.name %></h5>
  <p><%= comment.description %></p>
  </div>
<% end %>

<p><%= link_to "Add Comment", new_comment_path(post_id: @post.id, user_id: current_user.id) %><p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>
