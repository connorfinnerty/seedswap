    <% if msg.is_a?(String) %>
      <div class="alert <%= bootstrap_class_for(name) %>">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= content_tag :div, msg %>
      </div>
    <% end %>
  <% end %>
