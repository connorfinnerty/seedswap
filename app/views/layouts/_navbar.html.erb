<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
 <% if user_signed_in? %>
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Seedswap", root_path, :class => "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Add Post", new_post_path %></li>
        <li><%= link_to "Browse Seeds", href="#" %></li>
        <li><%= link_to "User Settings", href="#" %></li>
        <li class='logout-text'><%= link_to "LOG OUT", destroy_user_session_path, :method => :delete %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
<% end %>
