<div class="row">
  <div id="sidebar" class="col-md-3">
  <% if user_signed_in? %>
    <% @posts.each do | post | %>
      <%= link_to post_path(post) do %>
      <section>
        <h4><%= post.name %></h4>
        <h5><%= post.user.name %></h5>
      </section>
      <% end %>
    <% end %>
  <% end %>
  </div>

  <div class='col-md-9 col-md-offset-3'>
    <%= yield %>
  </div>
</div>
