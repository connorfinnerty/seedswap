@import "bootstrap-sprockets";
@import "bootstrap";

body {
  background-image: url('<%= asset_path("plants/wood-anemone.jpeg") %>');
  padding-top: 50px;
  font-family: 'Roboto', Helvetica, Arial, sans-serif;
}

#sidebar {
  padding-top: 4em;
  padding-bottom: 4em;
  padding-right: 0px;
  background-color: #E2EEE4;
  border-right: 1px solid rgb(186, 220, 192);
  height: 100%;
  overflow-y: auto;
  section {
    margin-left: 0px;
    border-bottom: 1px solid silver;
  }
  section:hover {

    background: white;
  }
}

@media (min-width: 992px) {
  #sidebar {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 1000;
    background-color: #E2EEE4;
    border-right: 0px;
    border-bottom: 1px solid rgb(186, 220, 192);
  }
}

.outer-box {
  border: 0;
  padding: 18px;
  background-color: white;
  margin-top: 15px;
  margin-bottom: 15px;
  box-shadow: 0 1px 6px rgba(0,0,0,.12),0 1px 6px rgba(0,0,0,.12);
}

.search-table {
  margin-top: 50px;
}
