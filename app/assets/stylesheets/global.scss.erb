@import "bootstrap-sprockets";
@import "bootstrap";

body {
  //background-image: url('<%= asset_path("plants/bg.png") %>');
  padding-top: 50px;
  font-family: 'Roboto', Helvetica, Arial, sans-serif;
}

.navbar, .navbar-default {
  background: white;
}

body {
  background: url('<%= asset_path("plants/bg.png") %>') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

#sidebar {
  padding-top: 4em;
  padding-bottom: 4em;
  padding-right: 0px;
  background-color: #E2EEE4;
  border-right: 1px solid rgb(186, 220, 192);
  height: 100%;
  overflow-y: auto;
  section {
    margin-left: 0px;
    border-bottom: 1px solid silver;
  }
  section:hover {

    background: white;
  }
}

@media (min-width: 992px) {
  #sidebar {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 1000;
    background-color: #E2EEE4;
    border-right: 0px;
    border-bottom: 1px solid rgb(186, 220, 192);
  }
}

.outer-box {
  border: 0;
  padding: 35px;
  background-color: white;
  margin-top: 15px;
  margin-bottom: 15px;
  box-shadow: 0 1px 6px rgba(0,0,0,.12),0 1px 6px rgba(0,0,0,.12);
}

.search-table {
  margin-top: 50px;
}

.btn {
  padding: 10px 40px;
  font-size: 15px;
  border-radius: 1px;
}

.btn-default {
  color: #FFF;
  background-color: #6F80FF;
  border: none;
}

.btn-default:hover {
  color: #FFF;
  background-color: #485EFF;
  border: none;
}
