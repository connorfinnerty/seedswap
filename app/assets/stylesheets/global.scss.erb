body {
  background-image: url('<%= asset_path("plants/wood-anemone.jpeg") %>');
}

#sidebar {
  padding-top: 4em;
  padding-bottom: 4em;
  padding-right: 0px;
  padding-left: 15px;
  background-color: #E2EEE4;
  border-right: 1px solid rgb(186, 220, 192);
  height: 100%;
  overflow-y: auto;
}

@media (min-width: 992px) {
  #sidebar {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 1000;
    background-color: #E2EEE4;
    border-right: 0px;
    border-bottom: 1px solid rgb(186, 220, 192);
  }
}
